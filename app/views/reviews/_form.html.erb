<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :review_text %>
    <%= f.input :star_rating %>
    <%= f.input :recommended %>
    <%= f.input :teaching_style %>
    <%= f.input :status %>
    <%= f.input :votes %>
    <%= f.input :teacher_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
