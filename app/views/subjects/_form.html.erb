<%= simple_form_for(@subject) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject_name %>
    <%= f.input :subject_catalog_number %>
    <%= f.input :about_text %>
    <%= f.input :department_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
