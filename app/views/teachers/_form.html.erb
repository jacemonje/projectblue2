<%= simple_form_for(@teacher) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :middle_initial %>
    <%= f.input :last_name %>
    <%= f.input :teaching_style %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
