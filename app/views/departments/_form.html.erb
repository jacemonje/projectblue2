<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :department_name %>
    <%= f.input :chair_name %>
    <%= f.input :about_text %>
    <%= f.input :school_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
